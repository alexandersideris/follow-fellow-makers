<div style="text-align: center; font-size: 20px; padding-top: 50px; background-color: white;">

	<h1 style="margin:30px;">New List</h1>


	<%= form_for @list do |l| %>

		</br>
		<p style="color: green;">The list's name, eg. indiehackers-community</p>
		<img src="https://i.imgur.com/y1Fu8m0.jpg" style="height: 150px; margin-top: 30px;"><br><br>


		<%= l.label :name %></br>
		<%= l.text_field :name, :required => true%>
		<br></br><br></br>

		<p style="color: green;">The list's owner (eg. patrics)</p>
		<img src="https://i.imgur.com/OakosvC.jpg" style="height: 150px; margin-top: 30px;"><br><br>
		<%= l.label :owner %></br>
		<%= l.text_field :owner, :required => true%>
		<br></br><br></br>

		<%= l.submit %>

		<br><br>
		
	<% end %>
</div>
