<div style="text-align: center; font-size: 20px; padding-top: 50px; background-color: white;">

	<h1 style="margin:30px;">New List</h1>


	<%= form_for @list do |l| %>

		</br>
		<p style="color: green;">The list's slug name (eg. indiehacker-group not IndieHackers Group)</p>

		<%= l.label :name %></br>
		<%= l.text_field :name, :required => true%>
		<br></br><br></br>

		<p style="color: green;">The list's owner (eg. johny23 not John Bubiboy)</p>

		<%= l.label :owner %></br>
		<%= l.text_field :owner, :required => true%>
		<br></br><br></br>

		<%= l.submit %>

		<br><br>
		
	<% end %>
</div>
